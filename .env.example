# === Ustawienia aplikacji backend (Flask) ===

# Adres i port API
APP_HOST=127.0.0.1
APP_PORT=8000

# Tryb działania aplikacji (development / production)
FLASK_ENV=development
DEBUG=True

# Klucz tajny do sesji Flask (zmień w produkcji!)
SECRET_KEY=zmientonabezpiecznyklucz

# Baza danych SQLite (domyślnie plik lokalny)
DATABASE_URL=sqlite:///expenses.db

# --- (opcjonalnie) Adres email do powiadomień ---
ALERT_EMAIL=

# === Ustawienia aplikacji frontend (PWA) ===

# Publiczny adres API do połączenia z frontendem (np. przez reverse proxy)
PUBLIC_API_URL=http://localhost:8000

# === Ustawienia PWA ===

# Nazwa aplikacji PWA
PWA_APP_NAME=Mobile-Expenses
# Krótka nazwa (do ekranu głównego)
PWA_SHORT_NAME=Expenses
# Kolor motywu
PWA_THEME_COLOR=#01b7c4
# Kolor tła
PWA_BG_COLOR=#fffefb

# === Klucze API do integracji z usługami zewnętrznymi (jeśli używasz) ===

# Google Analytics (opcjonalnie)
GA_MEASUREMENT_ID=

# Webhook/Slack/Discord do alertów (opcjonalnie)
ALERT_WEBHOOK_URL=

# === Ustawienia proxy (np. gdy używasz reverse proxy, nginx, CORS) ===

PROXY_URL=

# === Inne zmienne (dodaj wg potrzeb) ===

# tryb testowania/debugowania PWA
PWA_DEBUG=False

# Uwaga: Ten plik służy wyłącznie jako przykład. Skopiuj jako .env i wypełnij własnymi wartościami!
